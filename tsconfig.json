{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "outDir": "build",

    "baseUrl": "./",

    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*", "events/**/*", "commands/**/*", "utilities/**/*"],
  "exclude": ["node_modules/**/*"],
  "compileOnSave": true
}
